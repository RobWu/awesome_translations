- content_for(:header_title) { "Translations" }

= bb_panel "Filter" do
  = simple_form_for :q, method: :get, url: [:handler_translations], defaults: {required: false} do |f|
    = f.input :translation_key_key_cont, label: "Key", input_html: {value: @ransack_values[:translation_key_key_cont]}
    = f.button :submit, "Filter", class: ["btn", "btn-primary"]

= bb_panel "Translations", table: true do
  %thead
    %tr
      %th Key
  %tbody
    - @handler_translations.each do |handler_translation|
      %tr
        %td= handler_translation.key
    - if @handler_translations.empty?
      %tr
        %td{colspan: 1} No translations
