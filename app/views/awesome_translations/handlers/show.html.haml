%h1= "Show handler: #{@handler.name}"

%table
  %thead
    %th Key
    %th Dir
    - I18n.available_locales.each do |locale|
      %th= locale
  %tbody
    - @translations.each do |translation|
      %tr
        %td= translation.key
        %td= translation.dir
        - I18n.available_locales.each do |locale|
          %td= translation.value(locale: locale)
    - if @translations.empty?
      %tr
        %td.error{colspan: 2} No translations were found.
