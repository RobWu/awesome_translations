- content_for(:header_title) { "Handlers" }
- content_for(:header_right) { bb_btn update_cache_handlers_path, "Update", method: :post, sm: true, data: {confirm: "Are you sure?"} }

= bb_panel "Handlers", table: true do
  %thead
    %tr
      %th Handler
  %tbody
    - @handlers.each do |handler|
      %tr
        %td= link_to handler.name, handler_path(handler)
    - if @handlers.empty?
      %tr
        %td.error{colspan: 1} No handlers were found.
