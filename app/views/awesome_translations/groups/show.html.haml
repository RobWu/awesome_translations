%h1= "Show group: #{@group.name}"

= form_for :group, url: handler_group_path(@handler, @group), method: :put do |f|
  %table
    %thead
      %th Key
      %th Dir
      - I18n.available_locales.each do |locale|
        %th= locale
    %tbody
      - @translations.each do |translation|
        %tr
          %td= translation.key
          %td= translation.dir.gsub("#{Rails.root.to_s}/", "")
          - I18n.available_locales.each do |locale|
            %td
              = text_field "t", "#{translation.key}[#{locale}]", value: translation.value(locale: locale)
      - if @translations.empty?
        %tr
          %td.error{colspan: 2} No translations were found.

  = f.submit "Save"
